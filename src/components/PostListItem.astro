---
const { id, icon, title, description, pubDate } = Astro.props;
import FormattedDate from "@/components/FormattedDate.astro";
import { Icon } from "astro-icon/components";
import { ICON_COLORS } from "src/consts";
import { getRandomClass } from "src/tool";
---

<a href={`/blog/${id}/`} class="flex flex-col gap-4">
  <div
    class={`${getRandomClass(ICON_COLORS)} text-4xl p-2 self-start border-1 border-black shadow-card-sm group-hover:shadow-card transition`}
  >
    <Icon name={icon} />
  </div>
  <h4 class="text-xl font-semibold">{title}</h4>
  <p class="date -mt-4 text-sm font-light">
    <FormattedDate date={pubDate} />
  </p>
</a>
<div set:html={description} />
