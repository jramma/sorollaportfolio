---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import LinkButton from "./LinkButton.astro";

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif}",
);
---

<section class="py-20 flex md:flex-row flex-col px-4 md:px-0 gap-10 md:gap-0">
  <div class="flex flex-col gap-6 justify-start items-start md:w-1/2">
    <h1 class="text-pblack">Hi, my name is Sherman</h1>
    <p class="text-3xl font-bold">
      I believe there are oppressive forces in the world, yet we are free enough
      to fight them.
    </p>
    <p>
      I worked as a backend software engineer in China for 6 years. Now I am
      studying Interactive Media Design at Algonquin College in Ottawa and I am
      exploring how to become a full stack developer.
    </p>
    <!-- replace to linkin -->
    <LinkButton href="/about" title="Work together" bgColor="bg-[#d8b4fe]" />
  </div>
  <div
    class="md:w-1/2 object-contain flex items-center justify-center p-10 group min-h-[400px]"
  >
    <div
      class="bg-pblue border-3 border-black rounded-2xl h-52 w-60 shadow-card group-hover:shadow-hover flex transition relative"
    >
      <div
        class="absolute -top-8 -left-12 text-5xl bg-purple-300 px-5 py-1 z-10 shadow-card group-hover:shadow-hover transition rounded-t-2xl border-3 border-black rounded-bl-2xl rounded-br-sm"
      >
        <Icon name="planet/planet7" />
      </div>
      <div
        class="absolute top-16 -right-16 text-5xl bg-pyellow p-2 z-10 shadow-card group-hover:shadow-hover transition rounded-full border-3 border-black"
      >
        <Icon name="space/alienship2" />
      </div>
      <div
        class="absolute text-nowrap flex items-center gap-4 -bottom-14 right-0 px-2 bg-pgreen z-10 shadow-card1 group-hover:shadow-card transition rounded-full border-3 border-black"
      >
        <!-- <Icon name="alienship2" /> -->
        <p>Sherman Liu</p>
      </div>
      <div class="h-80 w-60 overflow-hidden relative -mt-30 rounded-2xl">
        <Image
          class="object-bottom absolute bottom-0 group-hover:scale-105 transition rounded-lg"
          src={images["/src/assets/selfie.jpg"]()}
          alt="a man sitting on a chair in the park and smiling"
        />
      </div>
    </div>
  </div>
</section>
